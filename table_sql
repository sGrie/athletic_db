
CREATE TABLE School (
	id INT PRIMARY KEY,
	name VARCHAR(50) NOT NULL,
	mascot VARCAR(50)
);

CREATE TABLE Team (
	id INT PRIMARY KEY,
	name VARCHAR(50) NOT NULL,
	head_coach VARCHAR(50),
	conference VARCHAR(50),
	sport VARCHAR(50),
	school_id INT REFERENCES School(id)
);

CREATE TABLE Athlete (
	id INT PRIMARY KEY,
	first_name VARCHAR(50) NOT NULL,
	last_name VARCHAR(50) NOT NULL,
	country_code CHAR(2) NOT NULL,
	age INT,
	main_event VARCHAR(50)
	team_id INT REFERENCES Team(id)
);

CREATE TABLE Event_submission (
	id INT PRIMARY KEY,
	result VARCHAR(50),
	eventId INT REFERENCES Event(id),
	athlete_id INT REFERENCES Athlete(id)
);



CREATE TABLE Competitions {
	id int PRIMARY KEY,
	event_location VARCHAR(20),
	name VARCHAR(25),
	date DATE()
};



CREATE TABLE Events {
	id int PRIMARY KEY,
	name VARCHAR(20) NOT NULL,
	comp_id int FOREIGN KEY REFERENCES Competition(id) NOT NULL

};
